generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"        // <= trocado de sqlite para postgresql
  url      = env("DATABASE_URL") // use a URL do Neon aqui (via env)
}

model Project {
  id             String   @id @default(cuid())
  repoId         Int      @unique
  fullName       String
  name           String
  owner          String
  description    String?
  language       String?
  topics         Json                // array JSON de strings (ok no Postgres)
  stars          Int
  forks          Int
  watchers       Int
  openIssues     Int
  hasHomepage    Boolean  @default(false)
  readmeSize     Int      @default(0)
  lastPushedAt   DateTime
  ownerFollowers Int      @default(0)

  scoreAllTime   Float    @default(0)
  scoreTrending  Float    @default(0)
  scoreUpdatedAt DateTime @default(now())

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([scoreTrending])
  @@index([scoreAllTime])
  @@index([language])
  @@index([stars])
}
