generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id             String   @id @default(cuid())
  repoId         Int      @unique
  fullName       String
  name           String
  owner          String
  description    String?
  language       String?
  topics         Json              // <= aqui (array JSON de strings)
  stars          Int
  forks          Int
  watchers       Int
  openIssues     Int
  hasHomepage    Boolean  @default(false)
  readmeSize     Int      @default(0)
  lastPushedAt   DateTime
  ownerFollowers Int      @default(0)

  scoreAllTime   Float    @default(0)
  scoreTrending  Float    @default(0)
  scoreUpdatedAt DateTime @default(now())

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
